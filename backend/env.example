# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
CORS_ORIGIN=http://localhost:5173

# Security (REQUIRED in production)
JWT_SECRET=your-super-secure-jwt-secret-key-here
REDIS_URL=redis://localhost:6379

# Plugin Configuration
PLUGIN_KEY=your-plugin-key-here

# Sepay Payment Gateway (REQUIRED for payments)
SEPAY_API_KEY=your-sepay-api-key
SEPAY_ACCOUNT_NO=your-account-number
SEPAY_BANK_CODE=Mbbank
SEPAY_QR_TEMPLATE=compact
SEPAY_ACCOUNT_NAME=YOUR_ACCOUNT_NAME
SEPAY_RETURN_URL=https://yourdomain.com/payment/success
SEPAY_CALLBACK_URL=https://yourdomain.com/api/payments/callback
SEPAY_WEBHOOK_TOKEN=your-webhook-token

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=120
